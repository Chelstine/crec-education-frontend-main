# ===============================
# Configuration pour le frontend CREC
# ===============================

# ✅ URL du backend API Laravel (CORRECTION: doit correspondre à votre serveur)
VITE_API_URL=http://localhost:8000/api

# ✅ URL de base pour les fichiers statiques (images, documents)
VITE_STORAGE_URL=http://localhost:8000/storage

# ✅ Configuration de l'environnement
VITE_APP_ENV=development
VITE_APP_NAME="CREC Education"

# ✅ Configuration de l'authentification
VITE_AUTH_STORAGE_KEY=auth_token
VITE_USER_STORAGE_KEY=user_info

# ✅ Configuration des timeouts
VITE_API_TIMEOUT=30000

# ✅ Configuration des uploads
VITE_MAX_FILE_SIZE_MB=50
VITE_MAX_IMAGE_SIZE_MB=2
VITE_MAX_VIDEO_SIZE_MB=10

# ✅ Configuration des formats autorisés
VITE_ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,gif,webp
VITE_ALLOWED_DOCUMENT_FORMATS=pdf,doc,docx,epub
VITE_ALLOWED_VIDEO_FORMATS=mp4,webm,avi

# ✅ Configuration de pagination par défaut
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=100

# ✅ Configuration pour le développement
VITE_DEBUG_MODE=true
VITE_MOCK_API=false

# ✅ Configuration CORS (si nécessaire)
VITE_CORS_ENABLED=true

# ✅ Configuration de cache
VITE_CACHE_DURATION=300000

# ✅ URLs spécifiques pour différents endpoints
VITE_FABLAB_API_URL=http://localhost:8000/api/fablab
VITE_ADMIN_API_URL=http://localhost:8000/api/admin
VITE_PUBLIC_API_URL=http://localhost:8000/api/public

# ✅ Configuration pour les réservations
VITE_RESERVATION_MIN_DURATION=1
VITE_RESERVATION_MAX_DURATION=8
VITE_RESERVATION_ADVANCE_DAYS=30

# ✅ Configuration pour les notifications
VITE_NOTIFICATION_DURATION=5000

# ===============================
# Configuration de production (commentées)
# ===============================

# Pour la production, décommentez et modifiez ces valeurs:
# VITE_API_URL=https://votre-domaine.com/api
# VITE_STORAGE_URL=https://votre-domaine.com/storage
# VITE_APP_ENV=production
# VITE_DEBUG_MODE=false