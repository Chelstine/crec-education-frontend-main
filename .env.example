# Configuration pour le frontend CREC
# Copiez ce fichier en .env.local et ajustez les valeurs

# URL du backend API
VITE_API_URL=http://localhost:3001/api

# Configuration de l'environnement
VITE_APP_ENV=development

# Configuration de l'authentification
VITE_SESSION_TIMEOUT=1800000
VITE_FABLAB_SESSION_TIMEOUT=7200000

# Configuration des uploads
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Configuration du paiement (si intégration future)
VITE_PAYMENT_PROVIDER=
VITE_PAYMENT_PUBLIC_KEY=

# Configuration email (pour notifications)
VITE_SUPPORT_EMAIL=crecjscontact@gmail.com
VITE_ADMIN_EMAIL=crecjesuitesbenin@gmail.com

# Mode debug
VITE_DEBUG_MODE=true

# Clés d'API tierces
VITE_GOOGLE_MAPS_API_KEY=
VITE_ANALYTICS_ID=

# Configuration de sécurité
VITE_ENABLE_2FA=false
VITE_PASSWORD_MIN_LENGTH=8

# Configuration pour la production (plus tard)
# VITE_API_URL=https://api.crec-benin.org
# VITE_APP_ENV=production
